#include <iostream>
using namespace std;

int main() {
    // Declare variables for prices
    int water_price, juice_price, milk_price;

    // Input prices from the user
    cout << "Enter water price: ";
    cin >> water_price;
    cout << "Enter juice price: ";
    cin >> juice_price;
    cout << "Enter milk price: ";
    cin >> milk_price;

    // Use shorthand variables for easier calculations
    int x = water_price;
    int y = juice_price;
    int z = milk_price;

    // Display calculations before discount
    cout << "\n--- Prices Before Discount ---" << endl;
    cout << "Price of one water and one juice: " << x + y << endl;
    cout << "Price of two waters: " << 2 * x << endl;
    cout << "Price of two waters and one juice: " << 2 * x + y << endl;
    cout << "Price of five juices: " << 5 * y << endl;
    cout << "Price of four waters and three juices: " << 4 * x + 3 * y << endl;
    cout << "Price of sixty waters and forty juices: " << 60 * x + 40 * y << endl;
    cout << "Price of one thousand waters and two hundred juices: " << 1000 * x + 200 * y << endl;
    cout << "Price of fifty milks, two waters, and ten juices: " << 50 * z + 2 * x + 10 * y << endl;
    cout << "Price of one water, ten juices, and seven milks: " << x + 10 * y + 7 * z << endl;

    // Apply a discount of 10 to each item
    int discount = 10;
    x = x - discount;
    y = y - discount;
    z = z - discount;

    // Display calculations after discount
    cout << "\n--- Prices After Discount ---" << endl;
    cout << "Price of one water and one juice: " << x + y << endl;
    cout << "Price of two waters: " << 2 * x << endl;
    cout << "Price of two waters and one juice: " << 2 * x + y << endl;
    cout << "Price of five juices: " << 5 * y << endl;
    cout << "Price of four waters and three juices: " << 4 * x + 3 * y << endl;
    cout << "Price of sixty waters and forty juices: " << 60 * x + 40 * y << endl;
    cout << "Price of one thousand waters and two hundred juices: " << 1000 * x + 200 * y << endl;
    cout << "Price of fifty milks, two waters, and ten juices: " << 50 * z + 2 * x + 10 * y << endl;
    cout << "Price of one water, ten juices, and seven milks: " << x + 10 * y + 7 * z << endl;

    return 0;
}
